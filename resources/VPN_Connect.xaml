<Grid
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Height="300"
>
	
    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
		<StackPanel Orientation="Vertical" Margin="0,5,0,0" Width="150">
			<Label FontWeight="Bold" Foreground="#C9C6D3" FontSize="14" Content="Connecting to VPN" Margin="0,0,0,0" />
			<Button x:Name="BtnClose" Content="Close" Width="100" HorizontalAlignment="Left" />
		</StackPanel>
		<StackPanel Orientation="Vertical" Margin="10,5,0,0" Width="400">
			<Label FontWeight="Bold" Foreground="#C9C6D3" FontSize="14" Content="Status:" Margin="0,0,0,0" />
			<TextBlock TextWrapping="Wrap" x:Name="TextBlock" Margin="10,0,0,0"></TextBlock>
		</StackPanel>		
	</StackPanel>	
</Grid>